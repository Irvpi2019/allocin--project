{% extends "template.html.twig" %}

{% block body %}
<div class="container">
        <div class="row">
            {% for real in reals|slice(0, 3) %}
                <div class="col-4 text-center rounded-circle">
                    <a href="{{baseUrl}}/realisateur/{{real.id}}"><img src="{{baseUrl}}/assets/img/reals/{{real.photo}}" class= "float-right img-thumbnail"></a>
                </div>
            {% endfor %}
        </div>
        <div class="row">
			{% for real in reals|slice(3, 3) %}
				<div class="col-4 text-center">
					<a href="{{baseUrl}}/realisateur/{{real.id}}"><img src="{{baseUrl}}/assets/img/reals/{{real.photo}}"class="float-right img-thumbnail"></a>
				</div>
               {% endfor %} 
        </div>
</div>
{% endblock %}