
{% extends "template.html.twig" %}

{% block body %}
	{# {{ dump(artists, film) }} #}

	<div class="presentation">
		<header>
			<h2>{{film.titre}}</h2>
			<h3>{{film.prenomReal}}
				{{film.nomReal}}</h3>
		</header>
		<div class="content">
			<img src="{{baseUrl}}/assets/img/film/{{film.affiche}}" class="img_presentation" alt=""/>
			<div class="bloc1">Sorti en
				<span>{{film.sortie|date("d/m/Y")}}</span>
				et réalisé par
				<span>{{ film.nomReal }}</span>. C'est un film
				<span>{{ film.genre }}</span>
				qui dure environs
				<span>durée</span>. <br>	
				On y retrouve les acteurs :
				{% for actor in artists %}
				{{ actor.prenom }} {{ actor.nom }}{% if not loop.last %},{% endif %}
				{% endfor %}
				<span></span>
			</div>


			<div class="bloc2">
				<p>
					{{ film.synopsis|nl2br }} 
				</p>
			</div>

			<div class="clear"></div>

			<div class="histoire">
				<p>Liens vers acteurs et réalisateurs du film :</p>
				<ul>
				{% for actor in artists %}
			
					<li><a href="{{baseUrl}}/acteur/{{actor.id}}"> {{ actor.prenom }} {{ actor.nom }}{% if not loop.last %},{% endif %} </a> </li>
				{% endfor %}
					<li><a href="{{baseUrl}}/realisateur/{{film.id}}">{{film.prenomReal}} {{film.nomReal}}</li>
			
				</ul>
			</div>

		</div>
	</div>

{% endblock %}
