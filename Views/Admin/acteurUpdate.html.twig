  
{% extends "Admin/templateAdmin.html.twig" %}
{% block body %}
<h1> Admin modifier acteur</h1>
    <div class="container center-div shadow mb-5">
        <div class="heading text-center mb-5 text-uppercase text-white "></div>
        <div class="container row d-flex flex-row justify-content-center mb-5">
            <div class="admin-form shadow p-2">
                <form action="{{baseUrl}}/admin/acteurUpdate/{{ acteur.id }}" method="POST">
                    <div class="form-group">
                        <label for="genre" class="text-light">Nom:</label>
                        <input type="text" id="artiste" name="artiste" value="{{ acteur.nom }}" class="form-control" autocomplete="off">
                        <label for="genre" class="text-light">Prenom:</label>
                        <input type="text" id="artiste" name="artiste" value="{{ acteur.prenom }}" class="form-control" autocomplete="off">
                        <label for="genre" class="text-light">Date de naissance:</label>
                        <input type="text" id="artiste" name="artiste" value="{{ acteur.date_de_naissance }}" class="form-control" autocomplete="off">
                        <label for="genre" class="text-light">Biographie:</label>
                        <textarea class="form-control"  type="text" id="artiste" name="artiste">{{ acteur.biographie }}</textarea>
                        <label for="artist" class="text-light">Photo:</label>
                        <input type="file" id="artist" name="photo" class="form-control-file" autocomplete="off">
                    </div>
                    <input type="submit" class="btn btn-success" name="form_submit">
                </form>
            </div>
        </div>
    </div>

{% endblock %}