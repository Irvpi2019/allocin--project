{% extends "template.html.twig" %}
{% block stylesheets %}
<link rel= "stylesheet" href="{{baseUrl}}/assets/css/AdminStyle.css">
{% endblock %}
{% block header %}
   <nav class="navbar navbar-expand-lg navbar-dark">
		<a class="navbar-brand" href="#">PachiMovies</a>
		<ul class="navbar-nav mr-auto">
			<li class="nav-item">
				<a class="nav-link text-white" href="{{baseUrl}}">Accueil</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="{{baseUrl}}">Réalisateur</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="{{baseUrl}}/acteur">Acteur</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="{{baseUrl}}">Film</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="{{baseUrl}}/admin/genre">Genre</a>
			</li>
			</ul>
			<div>
	</nav>
{% endblock %}
{% block body %}

<h1>PAGE ADMIN GENRE</h1>

<table class="table table-striped table-dark">
  <thead>  
      <th scope="col">ID</th>
      <th scope="col">Genre</th>
      {% for genre in genres %} 
      <tr>
        <th scope="col">{{ genre.id }}</th>
        <th scope="col">{{ genre.nom }}</th>
        <div class = "button" >
          <th><a href="{{baseUrl}}/admin/genreUpdate/{{genre.id}}"><button type="button" class="btn btn-primary">Modifier</button></a></th>
          <th><button type="button" class="btn btn-danger" onclick="messageDelete({{genre.id}})">Supprimer</button></th>
        </div> 
      </tr>
    {% endfor %}
      
  </thead>
</table>
{% endblock %}
{% block javascript %}
<script>
function messageDelete(id){
    if ( confirm( "Message à afficher" ) ) {
    // Code à éxécuter si le l'utilisateur clique sur "OK"
        window.location = "{{ baseUrl }}/admin/genreDelete/" + id;
    }
}   
</script>
{% endblock %}