{% extends "Admin/templateAdmin.html.twig" %}

{% block stylesheets %}
<link rel= "stylesheet" href="{{baseUrl}}/assets/css/AdminStyle.css">
{% endblock %}


{% block body %}

<h1>PAGE ADMIN FILM</h1>
<a href="{{baseUrl}}/admin/filmAdd/{{film.id}}"button type="button" class="btn btn-primary btn-lg btn-block">Ajouter un film</button></a>
<table class="table table-striped table-dark mb-6">
  <thead>  
      <th scope="col">ID</th>
      <th scope="col">Film</th>
      {% for film in films|reverse %} 
      <tr>
        <th scope="col">{{ film.id }}</th>
        <th scope="col">{{ film.titre }}</th>
        <th scope="col">{{ film.sortie }}</th>
        <th scope="col">{{ film.synopsis }}</th>
        <div class = "button" >
          <th><a href="{{baseUrl}}/admin/filmUpdate/{{film.id}}"><button type="button" class="btn btn-primary">Modifier</button></a></th>
          <th><button type="button" class="btn btn-danger" onclick="messageDelete({{film.id}})">Supprimer</button></th>
        </div> 
      </tr>
    {% endfor %}
      
  </thead>
</table>
{% endblock %}
{% block javascript %}
{{ parent() }}
<script>
function messageDelete(id){
    if ( confirm( "êtes vous sur de vouloir supprimer" ) ) {
    // Code à éxécuter si le l'utilisateur clique sur "OK"
        window.location = "{{ baseUrl }}/admin/filmDelete/" + id;
    }
}   
</script>
{% endblock %}