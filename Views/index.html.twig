{% extends "template.html.twig" %}

{% block body %}
   
    <div class="container">
		<h1> Les coups de coeur de la semaine!</h1>
        <div class="row">
            {% for film in films|slice(0, 3) %}
                <div class="col-4 text-center">
                    <a href="{{baseUrl}}/film/{{film.id}}"><img src="{{baseUrl}}/assets/img/film/{{film.affiche}}"></a>
                </div>
            {% endfor %}
        </div>	
	</div>	
{% endblock %}
